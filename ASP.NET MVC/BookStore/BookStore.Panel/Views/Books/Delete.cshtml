@model BookStore.Panel.Models.BookViewModel

@{
    ViewData["Title"] = "Kitap Sil";
}

<h4>Aşağıdaki kitabı silmek istiyor musunuz ?</h4>
<hr />
<div>
    
    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CategoryId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CategoryName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.WriterId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.WriterName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PageCount)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PageCount)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PublishDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PublishDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>
        </div>
        <div class="col-md-6">
            <img src="~/uploads/books/@Model.ImageUrl" alt="" />
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        <input type="submit" value="Sil" class="btn btn-danger" />
    </form>
</div>
