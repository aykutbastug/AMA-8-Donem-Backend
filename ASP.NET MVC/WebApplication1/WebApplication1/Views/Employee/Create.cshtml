@model Employee
@{
    ViewData["Title"] = "Personel Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Personel Oluştur</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input class="form-control" asp-for="Id" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input class="form-control" asp-for="Name" />
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input class="form-control" asp-for="Surname" />
            </div>
            <div class="form-group">
                <label asp-for="Gorev" class="control-label"></label>
                <select class="form-control" asp-for="Gorev">
                    <option value="0">Developer</option>
                    <option value="1">Team Lead</option>
                    <option value="2">Project Manager</option>
                </select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Durumu" /> @Html.DisplayNameFor(model => model.Durumu)
                </label>               
            </div>

            <div class="form-group mt-3">
                <a class="btn btn-secondary" asp-action="Index">Back To List</a>
                <input type="submit" class="btn btn-primary" value="Create" />
                @* <button type="submit" class="btn btn-primary">Kaydet</button> *@
            </div>
        </form>
    </div>
</div>

